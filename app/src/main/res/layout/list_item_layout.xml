<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/btnAjouter"
        android:layout_width="119dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:text="@string/btn_ajouter"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNom"
        android:layout_width="199dp"
        android:layout_height="41dp"
        android:layout_marginEnd="2dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="2dp"
        app:layout_constraintEnd_toStartOf="@+id/txtPrix"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPrix"
        android:layout_width="81dp"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="2dp"
        app:layout_constraintEnd_toStartOf="@+id/btnAjouter"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="193dp"
        android:layout_height="36dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toStartOf="@+id/txtFiscal"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNom" />

    <TextView
        android:id="@+id/txtFiscal"
        android:layout_width="83dp"
        android:layout_height="37dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/btnAjouter"
        app:layout_constraintTop_toBottomOf="@+id/txtPrix" />
</androidx.constraintlayout.widget.ConstraintLayout>